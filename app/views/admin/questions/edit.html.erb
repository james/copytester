<h1>Editing <%= @copy_test.name %> > <%= @question.question %></h1>

<%= form_for [:admin, @copy_test, @question] do |question_form| %>
  <%= question_form.label :question, "Question" %>
  <%= question_form.text_field :question %>
  <p>Correct Answer:</p>
  <% @question.question_answers.each do |question_answer| %>
    <%= question_form.radio_button :correct_question_answer_id, question_answer.id %>
    <%= question_form.label :correct_question_answer_id, question_answer.answer, :value => question_answer.id %>
  <% end %>
  <%= question_form.submit "Save Question" %>
<% end %>

<ul>
  <% @question.question_answers.each do |answer| %>
    <li><%= answer.answer %><%= link_to "edit", edit_admin_copy_test_question_question_answer_path(@copy_test, @question, answer) %> </li>
  <% end %>
</ul>

<%= form_for [:admin, @copy_test, @question, @question.question_answers.build] do |copy_test_form| %>
  <%= copy_test_form.label :answer, "Answer" %>
  <%= copy_test_form.text_field :answer %>
  <%= copy_test_form.submit "Create Answer" %>
<% end %>